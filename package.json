{
  "name": "appshot-2020",
  "description": "Personal Boilerplate for starting a brand new project in 2020",
  "keywords": [],
  "author": "Ben Junya <bjunya@gmail.com>",
  "version": "1.0.0",
  "license": "MIT",
  "main": "index.js",
  "private": false,
  "scripts": {
    "clean": "npm-run-all --sequential clean-*",
    "clean-api": "rimraf api/build/",
    "clean-ui": "rimraf web/build",
    "prettier": "prettier --write \"{api,web,.}/**/*.{ts,tsx,js}\"",
    "install-deps": "npm-run-all --parallel install-deps-*",
    "install-deps-root": "npm install",
    "install-deps-api": "cd api && npm install",
    "install-deps-ui": "cd web && npm install",
    "dev": "npm run clean && npm run build-api && npm-run-all --parallel dev-*",
    "build-api": "cd api && npm run tsc",
    "dev-api-tsc": "cd api && npm run tsc -- --watch",
    "dev-api-start": "nodemon api/build/server.js",
    "dev-ui-start": "cd web && npm run dev"
  },
  "lint-staged": {
    "*.{ts,tsx,js}": [
      "prettier --write \"{api,web,.}/**/*.{ts,tsx,js}\"",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "npm-run-all": "^4.1.5"
  },
  "devDependencies": {
    "husky": "^3.1.0",
    "lint-staged": "^9.4.3",
    "nodemon": "^1.19.4",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0"
  }
}
